generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid())
  name      String?
  email     String  @unique
  password  String
  image     String?
  favorites Favorite[]
}

model Game {
  id          Int     @id @default(autoincrement())
  title       String
  released    String
  rating      Float
  background  String
  description String?
  
  favorites   Favorite[] // ðŸ”¹ Relation inverse avec Favorite
}

model Favorite {
  id      Int    @id @default(autoincrement())
  userId  String
  gameId  Int
  user    User   @relation(fields: [userId], references: [id])
  game    Game   @relation(fields: [gameId], references: [id])

  @@unique([userId, gameId]) // ðŸ”¹ EmpÃªche un utilisateur d'ajouter 2 fois le mÃªme jeu en favoris
}
