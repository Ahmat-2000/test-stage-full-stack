// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  favorites Favorites[]
}

model Games {
  id              String       @id @default(uuid())
  name            String    
  released        DateTime  
  rating          Float
  background_image String   
  genres          GameGenres[] // Many-to-many relation with Genre
  favorites       Favorites[]
}

model Genres {
  id    Int    @id @default(autoincrement())
  name  String @unique
  games GameGenres[]
}

// Pivot table for many-to-many relation between Game and Genre
model GameGenres {
  gameId  String
  genreId Int

  game  Games  @relation(fields: [gameId], references: [id])
  genre Genres @relation(fields: [genreId], references: [id])

  @@id([gameId, genreId]) // Composite primary key to avoid duplicates
}

model Favorites {
  id      String    @id @default(uuid())
  userId  String
  gameId  String
  user    Users   @relation(fields: [userId], references: [id])
  game    Games  @relation(fields: [gameId], references: [id])

  @@unique([userId, gameId]) // Prevents duplicate favorites
}
